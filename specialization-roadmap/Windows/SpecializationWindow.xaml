<Window x:Class="specialization_roadmap.SpecializationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:specialization_roadmap"
        mc:Ignorable="d"
        Title="SpecializationWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="title" Content="{Binding sTitle}" HorizontalAlignment="Center" Height="41" Margin="0,26,0,0" VerticalAlignment="Top" Width="205" FontSize="24"/>
        <Label x:Name="subTitle" Content="Start your roadmap" HorizontalAlignment="Center" Height="41" Margin="0,67,0,0" VerticalAlignment="Top" Width="170" FontSize="18"/>
        <Button x:Name="RoadmapStep1" Content="" HorizontalAlignment="Left" Height="53" Margin="462,139,0,0" VerticalAlignment="Top" Width="269" Click="RoadmapStep1_Click" Background="#FFEFEFEF" BorderBrush="#FFD2D2D2"/>
        <Label x:Name="title2" Content="{Binding sTitle}" HorizontalAlignment="Left" Height="42" Margin="44,124,0,0" VerticalAlignment="Top" Width="291" FontSize="24"/>
        <TextBox x:Name="description"   HorizontalAlignment="Left" Height="77" Margin="44,171,0,0" TextWrapping="Wrap" Text="{Binding sDescription}" VerticalAlignment="Top" Width="291"/>
        <Label x:Name="statusLabel" Content="Status:" HorizontalAlignment="Left" Margin="44,263,0,0" VerticalAlignment="Top" Width="56" FontWeight="Bold"/>
        <Label x:Name="statusContent" Content="{Binding sStatus}" HorizontalAlignment="Left" Margin="105,271,0,0" VerticalAlignment="Top" Width="102" Background="White" Foreground="#FF404040"/>
        <Label x:Name="progressLabel" Content="Progress:" HorizontalAlignment="Left" Margin="44,294,0,0" VerticalAlignment="Top" Width="56" FontWeight="Bold"/>
        <Label x:Name="progressContent" Content="{Binding sProgress}" HorizontalAlignment="Left" Margin="114,302,0,0" VerticalAlignment="Top" Width="102" Background="White" Foreground="#FF404040"/>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" Height="21" Margin="18,21,0,0" VerticalAlignment="Top" Width="64" Click="backButton_Click"/>
        <Button x:Name="RoadmapStep2" Content="" HorizontalAlignment="Left" Height="53" Margin="462,217,0,0" VerticalAlignment="Top" Width="269" Click="RoadmapStep1_Click" Background="#FFEFEFEF" BorderBrush="#FFD2D2D2"/>
        <Button x:Name="RoadmapStep3" Content="" HorizontalAlignment="Left" Height="53" Margin="462,294,0,0" VerticalAlignment="Top" Width="269" Click="RoadmapStep1_Click" Background="#FFEFEFEF" BorderBrush="#FFD2D2D2"/>
        <Label x:Name="RoadmapStep1TitleLabel" Content="{Binding r1Title}" Margin="572,88,144,317"/>
        <Label x:Name="RoadmapStep1IdLabel" Content="{Binding r1Id}" Margin="518,88,233,317"/>

    </Grid>
</Window>
