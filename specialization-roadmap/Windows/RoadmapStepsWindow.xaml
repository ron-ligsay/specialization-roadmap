<Window x:Class="specialization_roadmap.RoadmapStepsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:specialization_roadmap"
        mc:Ignorable="d"
        Title="RoadmapStepsWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" Height="21" Margin="18,21,0,0" VerticalAlignment="Top" Width="64" Click="backButton_Click"/>
        <Label x:Name="title2" Content="{Binding cTitle}" HorizontalAlignment="Left" Height="42" Margin="223,131,0,0" VerticalAlignment="Top" Width="291" FontSize="24"/>
        <TextBox x:Name="description"   HorizontalAlignment="Left" Height="77" Margin="223,0,0,0" TextWrapping="Wrap" Text="{Binding cDescription}" VerticalAlignment="Center" Width="291"/>
        <!--<Label x:Name="statusLabel" Content="Status:" HorizontalAlignment="Left" Margin="541,113,0,0" VerticalAlignment="Top" Width="56" FontWeight="Bold"/>
        <Label x:Name="statusContent" Content="{Binding Status}" HorizontalAlignment="Left" Margin="602,121,0,0" VerticalAlignment="Top" Width="102" Background="White" Foreground="#FF404040"/>-->
        <!--<Label x:Name="progressLabel" Content="Progress:" HorizontalAlignment="Left" Margin="541,144,0,0" VerticalAlignment="Top" Width="56" FontWeight="Bold"/>
        <Label x:Name="progressContent" Content="{Binding rProgress}" HorizontalAlignment="Left" Margin="602,152,0,0" VerticalAlignment="Top" Width="102" Background="White" Foreground="#FF404040"/>-->
        <Image x:Name="image" HorizontalAlignment="Left" Height="101" Margin="223,21,0,0" VerticalAlignment="Top" Width="291" Source="/Windows/book.png"/>
        <Button x:Name="previousButton" Content="Previous" HorizontalAlignment="Left" Height="21" Margin="223,382,0,0" VerticalAlignment="Top" Width="64" Click="previousButton_Click"/>
        <Button x:Name="nextButton" Content="Next" HorizontalAlignment="Left" Height="21" Margin="450,382,0,0" VerticalAlignment="Top" Width="64" Click="nextButton_Click"/>
        <Button x:Name="markCompletedButton" Content="Mark Complete" HorizontalAlignment="Left" Height="21" Margin="335,382,0,0" VerticalAlignment="Top" Width="102" Click="markCompletedButton_Click"/>
        <!--<ListBox x:Name="resourceListBox" HorizontalAlignment="Left" Height="85" Margin="223,275,0,0" VerticalAlignment="Top" Width="145" d:ItemsSource="{Binding Resources}"/>-->


    </Grid>
</Window>
